<div class="large-3 small-12 columns right">
  <h1><%= display_name @user %></h1>
  <%= image_tag @user.avatar.url(:med) %>
</div>
<div class="large-6 small-12 columns left">
  <% unless @user.bio.blank? -%>
    <div class="row">
      <h2>Bio</h2>
      <p><%= @user.bio %></p>
    </div>
  <% end -%>

  <% unless @user.games.empty? -%>
    <div class="row">
      <h2>Favourite Games</h2>
      <ul>
        <% @user.games.each do |game| -%>
        <li><%= game.name %></li>
        <% end -%>
      </ul>
    </div>
  <% end %>

  <% unless @user.skills.empty? -%>
    <div class="row">
      <h2>Skills</h2>
      <ul>
        <% @user.skills.each do |skill| -%>
        <li><%= skill.category.titleize %> | <%= skill.confidence %></li>
        <% end -%>
      </ul>
    </div>
  <% end %>
</div>