<div class="row">
  <div class="large-3 small-12 columns right">
    <h1><%= display_name @user %></h1>
    <%= image_tag @user.avatar.url(:med) %>
  </div>
  <div class="large-6 small-12 columns left">
    <% unless @user.bio.blank? -%>
      <div class="row">
        <h2>Bio</h2>
        <p><%= @user.bio %></p>
      </div>
    <% end -%>

    <% unless @user.games.empty? -%>
      <div class="row">
        <h2>Favourite Games</h2>
        <ul>
          <% @user.games.each do |game| -%>
          <li><%= game.name %></li>
          <% end -%>
        </ul>
      </div>
    <% end %>

    <% unless @user.skills.empty? -%>
      <div class="row">
        <h2>Skills</h2>
        <ul>
          <% @user.skills.each do |skill| -%>
          <li><%= skill.category.titleize %> | <%= skill.confidence %></li>
          <% end -%>
        </ul>
      </div>
    <% end %>
  </div>
</div>
<div class="row">
  <% if @current_user == @user -%>
    <div class="row">
      <div class="large-12">
        <%= form_tag '/new_post' do -%>
          <label>New post
            <%= text_area_tag "body" %>
          </label>
          <input type="submit" class="button right" value="Post" />
        <% end -%>
      </div>
    </div>
  <% end -%>
  <div class="row">
    <div class="large-12">
      <% @user.posts.reverse.each do |post| -%>
        <%= render partial: "post", locals: {post: post} %>
      <% end -%>
    </div>
  </div>
</div>