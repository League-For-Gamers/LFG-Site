<%= form_tag("/login", method: "post") do %>
  <% if flash[:alert] -%>
    <div data-alert class="alert-box">
    <%= flash[:alert] %>
    </div>
  <% end -%>
  <div class="small-12">
    <%= text_field_tag :username, nil, { placeholder: "Username" } %>
  </div>
  <div class="small-12">
    <%= password_field_tag :password, nil, { placeholder: "Password" }  %>
  </div>
  <div class="small-12 submit">
    <%= submit_tag "Log In", class: "btn" %>
  </div>
  <div class="small-6 colums left">
    <label>
      <input type="checkbox" name="remember">
      Remember Me?
    </label>
  </div>
  <div class="small-6 columns forgot right">
    <a href="/user/forgot_password">I forgot my password!</a>
  </div>
<% end -%>