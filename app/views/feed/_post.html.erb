<div class="streamPost text-card <%= 'official' if post.official -%>" id="post-<%= post.id %>" data-id="<%= post.id %>">
  <div class="large-2 small-3 columns user" data-id="<%= user.username %>">
    <%= link_to image_tag(user.avatar(:med), class: "avatar"), "/user/#{user.username}" %>
    <% if !@current_user.nil? and ((user == @current_user and (@current_user.has_permission? "can_edit_own_posts" or @current_user.has_permission? "can_delete_own_posts")) or @current_user.has_permission? "can_edit_all_users_posts" or @current_user.has_permission? "can_delete_all_posts") -%>
      <div class="user-controls">
        <% if @current_user.has_permission? "can_edit_own_posts" or @current_user.has_permission? "can_edit_all_users_posts" -%>
          <div class="edit-controls">
            <a class="submit-post">Submit</a>
            <a class="cancel-post">Cancel</a>
          </div>
        <% end -%>
        <div class="default-controls">
          <% if @current_user.has_permission? "can_edit_own_posts" or @current_user.has_permission? "can_edit_all_users_posts" -%>
            <a class="edit-post">Edit</a>
          <% end -%>
          <% if @current_user.has_permission? "can_edit_own_posts" or @current_user.has_permission? "can_delete_all_posts" -%>
            <a class="delete-post"></a>
          <% end -%>
        </div>
      </div>
    <% end -%>
    <% if post.official -%>
      <%= image_tag 'ui/official-shield.png', class: 'official-shield' %>
    <% end -%>
  </div>
  <div class="large-10 small-9 columns body">
    <span class="title"><%= link_to display_name(user), "/user/#{user.username}" -%>
    <% if !!@current_user and !@current_user.follow? user and @current_user != user -%>
      <a class="follow-user" href="/user/<%= user.username -%>/follow" title="Follow" data-tooltip></a>
    <% end -%></span>
    <p <% unless post.signed.blank? %>data-signed="<%= post.signed %>"<% end -%>><%= replace_urls post.body -%></p>
    <% unless post.bans.empty? -%>
      <div class="bans">
        <% post.bans.each do |ban| -%>
          <p><%= ban_string(ban) %></p>
        <% end -%>
      </div>
    <% end %>
    <%= post_time_ago(post) -%>
  </div>
</div>