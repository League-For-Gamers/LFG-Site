<div class="large-3 medium-4 small-6 columns group-card">
  <a href="/group/<%= group.slug %>">
    <% cache ["group-banner", group.id, group.updated_at, "thumb"] do -%>
      <%= image_tag group.banner(:thumb), class: "banner" %>
    <% end -%>
    <span class="title <%= "small" if group.title.length >= 31 %>"><%= group.title %></span>
  </a>
  <% if group.official %>
    <%= image_tag 'ui/official-shield.png', class: "official-shield #{"alt-pos" if group.slug == 'dev_learning_center'}" %>
  <% end %>
</div>